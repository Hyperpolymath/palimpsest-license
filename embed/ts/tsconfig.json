{
  "compilerOptions": {
    "target": "ES2016", /* Compile to modern, widely supported JavaScript */
    "module": "ESNext", /* Use modern module syntax */
    "lib": [
      "DOM",
      "ES2016"
    ], /* Include DOM types for browser environment */
    "outDir": "./dist", /* Output compiled JS to a 'dist' folder */
    "strict": true, /* Enable all strict type-checking options */
    "esModuleInterop": true, /* Allows interoperability with CommonJS modules */
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "embed/js/**/*.ts" /* Only compile .ts files in this directory */
  ]
}