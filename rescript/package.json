{
  "name": "@palimpsest/rescript",
  "version": "0.4.0",
  "description": "ReScript/ReasonML implementation of Palimpsest License client-side tools",
  "main": "lib/js/src/core/PalimpsestLicense.bs.js",
  "scripts": {
    "build": "rescript",
    "clean": "rescript clean",
    "watch": "rescript build -w",
    "format": "rescript format -all",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=__tests__"
  },
  "keywords": [
    "palimpsest",
    "license",
    "rescript",
    "reasonml",
    "ai-ethics",
    "metadata",
    "compliance"
  ],
  "author": "Palimpsest Stewardship Council",
  "license": "MIT",
  "devDependencies": {
    "rescript": "^11.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,res}",
      "!src/**/*.bs.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "dependencies": {},
  "peerDependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/palimpsest-license.git",
    "directory": "rescript"
  }
}
